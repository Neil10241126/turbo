{
  "name": "turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build -F docs",
    "build:web": "turbo run build -F web",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev -F docs",
    "dev:web": "turbo run dev -F web",
    "lint": "turbo run lint",
    "lint:docs": "turbo run lint -F docs",
    "lint:web": "turbo run lint -F web",
    "lint:ui": "turbo run lint -F @repo/ui",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
